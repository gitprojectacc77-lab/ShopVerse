@model IEnumerable<ShopVerse.Data.Product>
@{
    ViewData["Title"] = "Catalog";
}
<h2>Catalog</h2>

<form method="get" class="mb-3">
    <input name="q" class="form-control" placeholder="Search..." value="@(Context.Request.Query["q"])" />
</form>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="@p.ImageUrl" alt="@p.Title" />
                <div class="card-body">
                    <h5 class="card-title">@p.Title</h5>
                    <p class="card-text">@p.Price.ToString("0.00") ₼</p>
                    <a class="btn btn-primary" href="@Url.Action("Details","Catalog", new { id = p.Id })">View</a>
                </div>
            </div>
        </div>
    }
</div>
