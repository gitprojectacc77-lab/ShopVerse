@model IEnumerable<ShopVerse.Data.Product>
@{
    ViewData["Title"] = "Products (Admin)";
}
<h2>Products (Admin)</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>Active</th>
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Title</td>
                <td>@p.Category?.Name</td>
                <td>@p.Price.ToString("0.00") ₼</td>
                <td>@p.IsActive</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
